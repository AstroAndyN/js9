#!/bin/sh

LC_NUMERIC=en_US.ISO8859-1
export LC_NUMERIC

title="Histogram Plot"
while [ x"$1" != x ]; do
    case $1 in
	-t)
	    title="$2"
	    shift
	    shift
	    continue;;
	*)  
            break;;
    esac
done

awk -v title="${title}" '
BEGIN{
  mode=1
  npts=0
}
mode==1{
  if( $1 == "#" && $2 == "column:" ){
    column = $3
  }
  else if( $1 == "------" ){
    printf "{\042color\042: \042blue\042, \042label\042 : \042%s\042, ", title
    mode = 2
    next
  }
}
mode==2{
  if( NF == 4 ){
    if( npts == 0 ){
      printf "\042data\042 : ["
    } else {
      printf ","
    }
    npts = npts + 1
    printf "[%.2f, %s]", ($3+$4)/2, $2
  }
  else{
    mode = 3
  }
  next
}
END{
  if( mode > 1 ){
    printf "]}"
  }
}
'
exit 0
